pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
  line_x0=100
  line_y0=115
  line_x1=115
  line_y1=115

  accuracy = 1000
end

function _update()
  if (btnp(5)) then
    line_x0-=2
    line_y0+=2
  end

  if (line_x0>115 or line_x0<90) then
  	line_x0=100
  	line_y0=115
    accuracy-=100
  else
  	line_x0+=.25
  	line_y0-=.25
  end
end

function _draw()
  cls(1)
  line(line_x0, line_y0, line_x1, line_y1,8)
  print('accuracy: ' .. accuracy)
end
